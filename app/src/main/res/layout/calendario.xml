<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="56dp"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_voltar_cal"
            android:onClick="retornarInicio"
            android:layout_gravity="center"
            android:background="@drawable/back_arrow"
            android:layout_margin="15sp"
            android:layout_width="35sp"
            android:layout_height="35sp" />

        <TextView
            android:text="Calendário"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="215dp"
            android:layout_height="65sp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="normal|bold"
            android:textAlignment="center" />
    </LinearLayout>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"

        android:layout_width="match_parent"
        android:layout_height="350dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:weightSum="1"
        android:padding="5sp"
        android:layout_height="40dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="15sp"
            android:background="@drawable/hard"
            android:layout_height="15sp"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <TextView
            android:text="Há tarefas difíceis"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="40dp"
        android:padding="5sp"
        android:weightSum="1">

        <TextView
            android:background="@drawable/medium"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <TextView
            android:text="Há tarefas medianas"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="5sp"
        android:background="@android:color/transparent"
        android:layout_height="40dp"
        android:weightSum="1">

        <TextView
            android:background="@drawable/easy2"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <TextView
            android:text="Há apenas tarefas fáceis"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart" />
    </LinearLayout>
</LinearLayout>