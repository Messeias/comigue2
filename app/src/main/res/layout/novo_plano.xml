<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/list_item"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="402dp"
        android:orientation="vertical"
        android:background="@color/list_item"
        android:weightSum="1"
        android:layout_weight="0.86">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:elevation="10sp"
            android:text="Plano de Ensino"
            android:layout_gravity="center"
            android:padding="10sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:text="Nome do professor:"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/novo_plano_prof"
            android:paddingLeft="7sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@color/black">
            <requestFocus/>
        </EditText>
        <!--<View-->
        <!--android:background="@android:color/holo_blue_dark"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2sp"/>-->



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10sp"
                android:textSize="20sp"
                android:layout_marginBottom="10sp"
                android:layout_height="wrap_content"
                android:text="Assuntos"
                android:gravity="center"
                android:layout_width="251dp"
                android:textColor="@color/black" />
            <TextView
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10sp"
                android:textSize="24sp"
                android:layout_marginBottom="10sp"
                android:layout_height="wrap_content"
                android:text="+"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textColor="@android:color/holo_green_light"
                android:onClick="addAssunto"
                android:layout_weight="0.2"/>
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lista_assuntos"
            android:layout_height="match_parent">

        </ListView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingTop="7sp"
        android:orientation="vertical" >

        <Button
            android:layout_width="match_parent"
            android:text="Finalizar cadastro"
            android:background="@color/black"
            android:onClick="finalizarCadastroMateria"
            android:textColor="@color/white"
            android:layout_marginBottom="15sp"
            android:textSize="18sp"
            android:layout_height="50sp"/>

    </LinearLayout>


</LinearLayout>