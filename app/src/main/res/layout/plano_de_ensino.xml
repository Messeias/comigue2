<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/list_item"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="402dp"
        android:orientation="vertical"
        android:background="@color/list_item"
        android:weightSum="1"
        android:layout_weight="0.86">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:weightSum="1"
            android:layout_height="70dp">

            <Button
                android:id="@+id/btn_voltar_pl"
                android:onClick="retornarInicio"
                android:layout_gravity="center"
                android:background="@drawable/back_arrow"
                android:layout_margin="15sp"
                android:layout_width="40sp"
                android:layout_height="40sp" />

            <TextView
                android:id="@+id/plano_nome_mat"
                android:text="Plano de ensino"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="normal|bold"
                android:textAlignment="center" />
        </LinearLayout>
        <TextView
            android:id="@+id/plano_nome_prof"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:text="Professor teste"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/colorAccent"
            android:layout_margin="2sp"
            android:layout_width="match_parent"
            android:padding="5sp"
            android:layout_height="2sp"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10sp"
                android:textSize="20sp"
                android:layout_marginBottom="10sp"
                android:layout_height="wrap_content"
                android:text="Assuntos"
                android:gravity="center"
                android:layout_width="251dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/plano_lista_assuntos"
            android:padding="6sp"
            android:layout_height="match_parent">

        </ListView>


    </LinearLayout>


</LinearLayout>