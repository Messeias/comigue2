<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/list_item"
        android:elevation="10dp"
        android:layout_margin="10sp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_nome_assunto"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="Segunda Guerra Mundial"
                android:gravity="center"
                android:textSize="18sp"
                android:lines="1"
                android:textColor="@color/black"
                android:textStyle="normal|bold"
                android:layout_width="280dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingLeft="15dp"
                android:text="-"
                android:onClick="removerAssunto"
                android:textSize="35sp"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_data_inicio_assunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:layout_weight="0.3"
                android:text="Início: 24/10"
                android:gravity="start"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:layout_marginLeft="10sp"
                android:textColor="@color/black"
                android:textStyle="normal|bold" />

            <!--<TextView-->
                <!--android:id="@+id/list_data_fim_assunto"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="10px"-->
                <!--android:layout_weight="0.3"-->
                <!--android:text="Fim: 26/11"-->
                <!--android:layout_marginRight="10sp"-->
                <!--android:gravity="end"-->
                <!--android:textAlignment="textEnd"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@color/black"-->
                <!--android:textStyle="normal|bold" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_descricao_assunto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10sp"
                android:text="Matemática com a turma 4I, ministrada pelo Roberto"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="start"
                android:textAlignment="textStart" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>